import streamlit as st

# 페이지 설정
st.set_page_config(page_title="국가별 휴양지 추천", layout="centered")

st.title("🌴 세계 휴양지 추천기")
st.write("방문하고 싶은 국가를 선택하면, 대표적인 휴양지 2곳을 소개해드릴게요!")

# 국가 리스트
country_list = ["대한민국", "일본", "태국", "이탈리아", "프랑스", "호주", "미국", "스페인"]

# 국가별 휴양지와 설명
vacation_spots = {
